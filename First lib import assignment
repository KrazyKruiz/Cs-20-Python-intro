import easygui as easy, random

#All definitions pick a random word of specified type
def rngnoun():
    random_noun = random.randint(0, len(AnswersN)-1)
    noun = (AnswersN[random_noun])
    AnswersN.remove(AnswersN[random_noun])
    return noun

def rngverb():
    random_verb = random.randint(0, len(AnswersV)-1)
    verb = (AnswersV[random_verb])
    AnswersV.remove(AnswersV[random_verb])
    return verb
    
def rngving():
    random_ving = random.randint(0, len(AnswersVing)-1)
    ving = (AnswersVing[random_ving])
    AnswersV.remove(AnswersV[random_ving])
    return ving

def rngadj():
    random_adj = random.randint(0, len(AnswersAdj)-1)
    adj = (AnswersAdj[random_adj])
    AnswersAdj.remove(AnswersAdj[random_adj])
    return adj

def rngadv():
    random_adv = random.randint(0, len(AnswersAdv)-1)
    adv = (AnswersAdv[random_adv])
    AnswersAdv.remove(AnswersAdv[random_adv])
    return adv

def rngptv():
    random_ptv = random.randint(0, len(AnswersPtv)-1)
    ptv = (AnswersPtv[random_adv])
    AnswersPtv.remove(AnswersPtv[random_ptv])
    return ptv

def rngpl():
    random_pl = random.randint(0, len(AnswersPl)-1)
    pl = (AnswersPl[random_pl])
    AnswersPl.remove(AnswersPl[random_pl])
    return pl

while True:
    msg = "Input the indicated words to generate a fun story!"
    title = "Story Generator"
    
    #Asks for specified word type
    WordsN = ["Noun #1","Noun #2","Noun #3","Noun #4"]
    AnswersN = []
    AnswersN = easy.multenterbox(msg,title,WordsN)

    WordsV = ["Verb #1","Verb #2","Verb #3","Verb #4"]
    AnswersV = []
    AnswersV = easy.multenterbox(msg,title,WordsV)
    
    WordsVing = ["Verb ending with 'ing' #1","Verb ending with 'ing' #2","Verb ending with 'ing' #3","Verb ending with 'ing' #4"]
    AnswersVing = []
    AnswersVing = easy.multenterbox(msg,title,WordsVing)
 
    WordsAdj = ["Adjective #1","Adjective #2","Adjective #3","Adjective #4"]
    AnswersAdj = []
    AnswersAdj = easy.multenterbox(msg,title,WordsAdj)

    WordsAdv = ["Adverb #1","Adverb #2","Adverb #3","Adverb #4"]
    AnswersAdv = []
    AnswersAdv = easy.multenterbox(msg,title,WordsAdv)
   
    WordsPtv = ["Past tense verb #1","Past tense verb #2","Past tense verb #3","Past tense verb #4"]
    AnswersPtv = []
    AnswersPtv = easy.multenterbox(msg,title,WordsPtv)
         
    WordsPl = ["Plural noun #1","Plural noun #2","Plural noun #3","Plural noun #4"]
    AnswersPl = []
    AnswersPl = easy.multenterbox(msg,title,WordsPl)
        
    #picks random story to then fill out randomly
    rng = random.randint(1,3)

    if rng == 1:
        easy.msgbox(f"Today I went to the zoo. I saw a {rngadj()} {rngnoun()} jumping up and down in its tree. He {rngptv()} {rngadv()} through the large tunnel that led to its {rngadj()} {rngnoun()}. I got some peanuts and passed them through the cage to a gigantic gray {rngnoun()} towering above my head. Feeding that animal made me hungry. I went to get a {rngadj()} scoop of ice cream. It filled my stomach. Afterwards I had to {rngverb()} {rngadv()} to catch our bus. When I got home I {rngptv()} my mom for a {rngadj()} day at the zoo.")

    if rng == 2:
        easy.msgbox(f"The day I saw the Monkey King {rngverb()} was one of the most interesting days of the year. After he did that, the king played chess on his brother's {rngnoun()} and then combed his {rngadj()} hair with a comb made out of old fish bones. Later that same day, I saw the Monkey King dance {rngadv()} in front of an audience of kangaroos and wombats.")

    if rng == 3:
        easy.msgbox(f"When I go to the arcade with my {rngpl()} there are lots of games to play. I spend lots of time there with my friends. In the game X-Men you can be different {rngpl()}. The point of the game is to {rngverb()} every robot. You also need to save people. Then you can go to the next level. In the game Star Wars you are Luke Skywalker and you try to destroy every {rngnoun()}. In a car racing/motorcycle racing game you need to beat every computerized vehicle that you are {rngving()} against. There are a whole lot of other cool games. When you play some games you win {rngpl()} for certain scores. Once you're done you can cash in your tickets to get a big {rngnoun()}. You can save your {rngpl()} for another time. When I went to this arcade I didn't believe how much fun it would be. So far I have had a lot of fun every time I've been to this great arcade!")
    
    #continue?
    msg ="Do you want to do more?"
    title = "Continue?"
    choices = ["Yes","No"]
    choice = easy.choicebox(msg, title, choices)
    if choice == "No":
        exit()
#End :)
